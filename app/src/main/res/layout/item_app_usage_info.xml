<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:orientation="vertical"
    android:textAlignment="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon_usage_item"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_app_name_usage_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border_white"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_last_start_time_usage_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border_white"
            android:gravity="center" />

<!--        <TextView-->
<!--            android:id="@+id/txt_run_times_usage_item"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@drawable/textview_border_white"-->
<!--            android:gravity="center" />-->

        <TextView
            android:id="@+id/txt_foreground_time_usage_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border_white"
            android:gravity="center" />
    </LinearLayout>

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="2dp"-->
<!--        android:background="@drawable/selector_blue" />-->
</LinearLayout>
